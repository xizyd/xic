  "keywords": [
    "esp32",
    "mesh",
    "udp",
    "crypto",
    "rho",
    "tunnel",
    "railway",
    "networking",
    "monocypher"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xizyd/xic.git"
  },
  "authors": [
    {
      "name": "Xi (Abderrahmene MERZOUG)",
      "email": "",
      "maintainer": true
    }
  ],
  "license": "ISC",
  "frameworks": ["arduino", "espidf"],
  "platforms": ["espressif32", "linux_x86_64", "native"],
  "build": {
    "flags": [
      "-Iinclude",
      "-Ipackages/monocypher",
      "-O3"
    ],
    "srcFilter": [
      "+<packages/monocypher/monocypher.c>",
      "+<include/Xi/>",
      "+<include/Rho/>"
    ]
  }
